type User {
    id: ID!
    username: String!
    email: String!
}

input UserInput {
    username: String!
    email: String!
    password: String!
}

type Query {
    getAllUsers: [User]
    getUserById(id: ID!): User
    getUserByUsername(username: String!): User
}

type Mutation {
    createUser(user: UserInput!): User
    updateUser(id: ID!, user: UserInput!): User
    deleteUser(id: ID!): Boolean
}